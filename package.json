{
  "name": "nodepop",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "mongod": "cross-env-shell \"mongod --bind_ip $MONGODB_IP --port $MONGODB_PORT --dbpath .\\mongodb --directoryperdb\"",
    "mongo": "cross-env-shell MONGODB_URI=$MONGODB_IP:$MONGODB_PORT/$MONGODB_NAME \"mongo $MONGODB_URI\"",
    "nodepop_db_setup": "cross-env-shell \"cd .\\mongodb && .\\setup_datasets\"",
    "start": "cross-env-shell PORT=$APISERVER_PORT MONGODB_URI=$MONGODB_IP:$MONGODB_PORT/$MONGODB_NAME \"node ./bin/www\"",
    "dev": "cross-env-shell DEBUG=nodepop:* PORT=$APISERVER_PORT MONGODB_URI=$MONGODB_IP:$MONGODB_PORT/$MONGODB_NAME \"nodemon --inspect ./bin/www\"",
    "lint": "lint app.js",
    "gitpush": "git push origin master --follow-tags"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "cross-env": "^5.1.1",
    "debug": "~2.6.9",
    "ejs": "~2.5.7",
    "express": "~4.15.5",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.6",
    "morgan": "~1.9.0",
    "serve-favicon": "~2.4.5"
  }
}
